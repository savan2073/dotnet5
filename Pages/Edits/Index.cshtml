@page
@model FizzBuzzWeb.Pages.Edits.IndexModel
@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FizzBuzz[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FizzBuzz[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FizzBuzz[0].BirthYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FizzBuzz[0].Date)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.FizzBuzz.Take(20))
        {
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthYear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @if (String.Equals(@item.UserMail, User.Identity.Name))
                        {
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        }
                    </td>
                </tr>
            }
        }
        @foreach (var item in Model.FizzBuzz.Skip(20))
        {
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthYear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
